<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?>

<!-- default alignment is top-left -->
<!-- we can add css style as normal css properties but by add a prefix -fx- -->

<BorderPane
        fx:controller = "sample.Controller"
        xmlns:fx = "http://javafx.com/fxml"
        style = "-fx-border-color: green; -fx-border-width: 5"
>

    <top>
        <VBox
                alignment = "CENTER"
                spacing = "15"
                style = "-fx-background-color: green;"
        >

            <padding>
                <Insets top="20" right="20" left="20" bottom="20"/>
            </padding>
            <Label text="Welcome to Java FX!!" textFill="white">
                <font>
                    <Font name = "Times New Roman bold" size="50"/>
                </font>
            </Label>
        </VBox>
    </top>

    <left>
        <GridPane
                alignment="center"
                hgap="10"
                vgap="10"
                gridLinesVisible="false"
                style = "-fx-border-color: green; -fx-border-width: 5"
        >

            <padding>
                <Insets top="20" right="20" left="20" bottom="20"/>
            </padding>

            <Button text="a" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Button text="b" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Button text="c" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <Button text="d" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
            <Button text="e" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Button text="f" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Button text="g" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <Button text="h" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
            <Button text="i" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Button text="j" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Button text="k" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
            <Button text="l" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
            <Button text="m" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Button text="m" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Button text="o" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
            <Button text="p" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
            <Button text="q" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Button text="r" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            <Button text="s" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
            <Button text="t" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
            <Button text="u" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Button text="v" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            <Button text="w" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.columnIndex="2"/>
            <Button text="x" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.columnIndex="3"/>
            <Button text="y" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            <Button text="z" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.columnIndex="2"/>
        </GridPane>
    </left>

    <center>
        <GridPane
                alignment="center"
                hgap="10"
                vgap="10"
                gridLinesVisible="false"
                style = "-fx-border-color: green; -fx-border-width: 5"
        >
            <columnConstraints>
                <ColumnConstraints percentWidth="20.0"/>
                <ColumnConstraints percentWidth="20.0"/>
                <ColumnConstraints percentWidth="20.0"/>
                <ColumnConstraints percentWidth="20.0"/>
                <ColumnConstraints percentWidth="20.0"/>
            </columnConstraints>

            <padding>
                <Insets top="20" right="20" left="20" bottom="20"/>
            </padding>

            <Button text="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="100" prefHeight="100"/>
            <Button text="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="100" prefHeight="100"/>
            <Button text="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="2" prefWidth="100" prefHeight="100"/>
            <Button text="3" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="3" prefWidth="100" prefHeight="100"/>
            <Button text="4" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="4" prefWidth="100" prefHeight="100"/>
            <Button text="5" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="100" prefHeight="100"/>
            <Button text="6" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="100" prefHeight="100"/>
            <Button text="7" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="100" prefHeight="100"/>
            <Button text="8" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="100" prefHeight="100"/>
            <Button text="9" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="4" prefWidth="100" prefHeight="100"/>

        </GridPane>
    </center>

    <right>
        <GridPane
                alignment="center"
                hgap="10"
                vgap="10"
                gridLinesVisible="false"
                style = "-fx-border-color: green; -fx-border-width: 5"
        >

            <padding>
                <Insets top="20" right="20" left="20" bottom="20"/>
            </padding>

            <Button text="A" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Button text="B" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Button text="C" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <Button text="D" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
            <Button text="E" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Button text="F" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Button text="G" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <Button text="H" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
            <Button text="I" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Button text="J" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Button text="K" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
            <Button text="L" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
            <Button text="M" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Button text="N" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Button text="O" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
            <Button text="P" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
            <Button text="Q" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Button text="R" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            <Button text="S" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
            <Button text="T" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
            <Button text="U" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Button text="V" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            <Button text="W" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.columnIndex="2"/>
            <Button text="X" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.columnIndex="3"/>
            <Button text="Y" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            <Button text="Z" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.columnIndex="2"/>
        </GridPane>
    </right>

    <bottom>
        <VBox
                alignment = "BOTTOM_CENTER"
                spacing = "25"
                prefHeight="100"
                style = "-fx-background-color: green;"
        >
            <padding>
                <Insets top="20" right="20" left="20" bottom="20"/>
            </padding>

            <Label text="Do you want to continue?" textFill="white">
                <font>
                    <Font name = "Times New Roman bold" size="30"/>
                </font>
            </Label>

            <HBox
                    alignment = "BOTTOM_CENTER"
                    spacing = "25"
                    prefHeight="100"
            >
                <padding>
                    <Insets top="20" right="20" left="20" bottom="20"/>
                </padding>

                <Button text="YES" prefWidth="100"/>
                <Button text="NO" prefWidth="100"/>
                <Button text="Help" prefWidth="100"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>


