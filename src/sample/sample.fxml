<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<!-- default alignment is top-left -->
<?import javafx.scene.layout.ColumnConstraints?>
<GridPane
        fx:controller="sample.Controller"
        xmlns:fx="http://javafx.com/fxml"
        alignment="center"
        hgap="10"
        vgap="10"
        gridLinesVisible="false"
>
    <columnConstraints>
        <ColumnConstraints percentWidth="50.0"/>
        <ColumnConstraints percentWidth="50.0"/>
    </columnConstraints>

    <padding>
        <Insets left="20" right="20"/>
    </padding>

    <Label text="Welcome to Java FX!!" textFill="green" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <font>
            <Font name = "Times New Roman bold" size="50"/>
        </font>
    </Label>
    <Button text="button0" GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="button1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="button2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="button3" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button text="button4" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Button text="button5" GridPane.halignment="LEFT" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Button text="button6" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Button text="button7" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Button text="button8" GridPane.halignment="LEFT" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <Button text="button9" GridPane.halignment="RIGHT" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

</GridPane>