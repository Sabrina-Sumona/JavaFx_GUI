<!-- default alignment is top-left -->
<!-- we can add css style as normal css properties but by add a prefix -fx- -->

<!-- VBox (vertical box) Layout -->
<VBox
        fx:controller = "sample.Controller"
        xmlns:fx = "http://javafx.com/fxml"
        alignment = "TOP_CENTER"
        spacing = "15"
        style = "-fx-border-color: green; -fx-border-width: 5"
>

    <padding>
        <Insets right="20" bottom="20"/>
    </padding>

    <Label text="Welcome to Java FX!!" textFill="green">
        <font>
            <Font name = "Times New Roman bold" size="50"/>
        </font>
    </Label>

    <Label text="Do you want to continue?" textFill="royalblue">
        <font>
            <Font name = "Times New Roman bold" size="30"/>
        </font>
    </Label>

    <Button text="Done" prefWidth="100"/>
    <Button text="Exit" prefWidth="100"/>
    <Button text="Help" prefWidth="100"/>
</VBox>

